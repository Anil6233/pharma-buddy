
<%= simple_form_for(@bill_generation) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :sno %>
    <%= f.input :item_description %>
    <%= f.collection_select :medicine_id, Medicine.all, :id, :item_description %>
    <%= f.input :item_count %>
    <%= f.input :total %>
    <%= f.input :discount %>
    <%= f.input :amount %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
